{% extends 'base.html.twig' %}

{% block title %}Category
{% endblock %}

{% block body %}
	<h1>{{ category.name }}</h1>

	<a href="{{ path('app_category_index') }}">Volver a la lista de Categorías</a>
	<table class="table">
		<thead>
			<tr>
				<th>Título</th>
			</tr>
		</thead>
		<tbody>
			{% for article in articles %}
				<tr>
					<td>{{ article.title }}</td>

					<td>
						<a href="{{ path('app_article_show', {'id': article.id}) }}">Consultar
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
